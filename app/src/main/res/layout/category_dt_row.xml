<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ced6e0">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/categoryDtIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_plane"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:civ_border_color="@android:color/holo_orange_dark"
        app:civ_border_width="1dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/categoryDtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/categoryDtIcon"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center"
        android:text="Category"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/categoryDtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryDtName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/categoryDtIcon"
        android:fontFamily="@font/nunito_sans"
        android:gravity="center"
        android:text="13:02 17.09.2022"
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/categoryDtCost"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="@font/nunito_sans"
        android:text="100 AZN"
        android:textColor="#000"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
