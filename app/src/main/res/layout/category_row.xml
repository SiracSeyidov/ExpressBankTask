<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/categoryIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_plane"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:civ_border_color="@android:color/holo_orange_dark"
        app:civ_border_width="1dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Category"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/categoryIcon"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/categoryPercent"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="@font/nunito_sans"
        android:text="22%"
        android:textColor="#000"
        android:layout_toStartOf="@id/categoryCost"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/categoryCost"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="@font/nunito_sans"
        android:text="1500 AZN"
        android:textColor="#000"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
